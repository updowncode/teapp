{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "jsx": "react",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noEmit": true,
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
    },
    "filesGlob": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "types": [
        "react",
        "react-native",
        "jest"
    ],
    "exclude": [
        "android",
        "ios",
        "build",
        "node_modules"
    ]
}